<body>
    <!-- LOGIN PAGE -->
    <div id="authPage" class="auth-container">
        <div class="auth-box">
            <h1 style="color: #ffd700; margin-bottom: 20px; font-size: 2.2em;">üí™ GYM BEAST</h1>
            <div class="auth-tabs">
                <button class="tab-btn active" onclick="switchTab('login')">LOGIN</button>
                <button class="tab-btn" onclick="switchTab('signup')">CREATE</button>
            </div>
            <div id="loginForm" class="auth-form active">
                <input type="text" class="auth-input" id="loginUser" placeholder="Username">
                <input type="password" class="auth-input" id="loginPass" placeholder="Password">
                <button class="auth-btn" onclick="handleLogin()">üîê LOGIN</button>
                <div id="loginStatus" class="error"></div>
            </div>
            <div id="signupForm" class="auth-form">
                <input type="text" class="auth-input" id="signupUser" placeholder="New Username">
                <input type="password" class="auth-input" id="signupPass" placeholder="Password">
                <input type="password" class="auth-input" id="signupConfirm" placeholder="Confirm Password">
                <button class="auth-btn" onclick="handleSignup()">‚úÖ CREATE ACCOUNT</button>
                <div id="signupStatus" class="error"></div>
            </div>
        </div>
    </div>

    <!-- GYM TRACKER (HIDDEN UNTIL LOGIN) -->
    <div id="trackerPage" class="tracker-page">
        <button class="logout-btn" onclick="logout()">üö™ LOGOUT</button>
        <div class="user-info">üë§ <span id="currentUser"></span></div>
        
        <div class="container">
            <div class="challenge-info">
                <div class="challenge-dates">üí™ Jan 2026 - Dec 2027 | BEAST MODE</div>
                <div>Day <span id="challenge-day">7</span> | üî• Streak: <span id="streak-count">6</span></div>
            </div>
            
            <div class="header">
                <h1>üèãÔ∏è GYM BEAST TRACKER</h1>
                <div class="streak-display" id="streak-display">STREAK: 6 DAYS</div>
            </div>
            
            <div class="calendar-container">
                <div class="month-nav">
                    <button class="nav-btn" onclick="prevMonth()">‚¨ÖÔ∏è PREV</button>
                    <div class="month-title" id="month-title">JANUARY 2026</div>
                    <button class="nav-btn" onclick="nextMonth()">NEXT ‚û°Ô∏è</button>
                </div>
                <div class="calendar" id="calendar"></div>
            </div>
            
            <div class="tasks-section">
                <h3 style="text-align: center; margin-bottom: 20px; color: #ffd700;">‚ö° TODAY'S GRIND - Hit <span id="next-streak">7</span>üî•</h3>
                <div class="tasks">
                    <div class="task-item" onclick="toggleTask('wokeup')">
                        <label style="display:flex; align-items:center; cursor:pointer; width:100%;">
                            <input type="checkbox" id="wokeup"> ‚òÄÔ∏è 7 AM Woke Up
                        </label>
                    </div>
                    <div class="task-item" onclick="toggleTask('breakfast')">
                        <label style="display:flex; align-items:center; cursor:pointer; width:100%;">
                            <input type="checkbox" id="breakfast"> üç≥ Breakfast
                        </label>
                    </div>
                    <div class="task-item" onclick="toggleTask('lunch')">
                        <label style="display:flex; align-items:center; cursor:pointer; width:100%;">
                            <input type="checkbox" id="lunch"> üçó Lunch
                        </label>
                    </div>
                    <div class="task-item" onclick="toggleTask('gym')">
                        <label style="display:flex; align-items:center; cursor:pointer; width:100%;">
                            <input type="checkbox" id="gym"> üí™ Gym
                        </label>
                    </div>
                    <div class="task-item" onclick="toggleTask('steps')">
                        <label style="display:flex; align-items:center; cursor:pointer; width:100%;">
                            <input type="checkbox" id="steps"> üö∂ 10k Steps
                        </label>
                    </div>
                    <div class="task-item" onclick="toggleTask('water')">
                        <label style="display:flex; align-items:center; cursor:pointer; width:100%;">
                            <input type="checkbox" id="water"> üíß 4L Water
                        </label>
                    </div>
                    <div class="task-item" onclick="toggleTask('dinner')">
                        <label style="display:flex; align-items:center; cursor:pointer; width:100%;">
                            <input type="checkbox" id="dinner"> üçΩÔ∏è Dinner
                        </label>
                    </div>
                </div>
                <button class="save-btn" id="save-btn" onclick="saveDay()">‚ö° SAVE GRIND ‚Üí STREAK 7üî•</button>
                <div class="status" id="status">COMPLETE ALL 7 ‚Üí UNLOCK BEAST MODE!</div>
            </div>
        </div>
    </div>

    <script>
        const TASKS = ['wokeup', 'breakfast', 'lunch', 'gym', 'steps', 'water', 'dinner'];
        const START_DATE = new Date('2026-01-05');
        let currentMonth = 0, currentYear = 2026, currentUser = null;
        const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        const weekdays = ['SUN', 'MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT'];

        // AUTH FUNCTIONS
        function switchTab(tab) {
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.auth-form').forEach(form => form.classList.remove('active'));
            event.target.classList.add('active');
            document.getElementById(tab + 'Form').classList.add('active');
        }

        function showStatus(id, message, type = 'error') {
            const status = document.getElementById(id);
            status.textContent = message;
            status.className = type;
        }

        function handleSignup() {
            const username = document.getElementById('signupUser').value.trim();
            const password = document.getElementById('signupPass').value;
            const confirm = document.getElementById('signupConfirm').value;
            
            if (password !== confirm || !username || !password) {
                showStatus('signupStatus', '‚ùå Fill all fields & match passwords!');
                return;
            }
            if (localStorage.getItem(`gymbeast_${username}`)) {
                showStatus('signupStatus', '‚ùå Username taken!');
                return;
            }
            
            localStorage.setItem(`gymbeast_${username}`, JSON.stringify({username, password}));
            showStatus('signupStatus', '‚úÖ Account created! Login now ‚Üí', 'success');
            setTimeout(() => switchTab('login'), 1500);
        }

        function handleLogin() {
            const username = document.getElementById('loginUser').value.trim();
            const password = document.getElementById('loginPass').value;
            
            const userData = localStorage.getItem(`gymbeast_${username}`);
            if (!userData || JSON.parse(userData).password !== password) {
                showStatus('loginStatus', '‚ùå Wrong credentials!');
                return;
            }
            
            currentUser = username;
            document.getElementById('currentUser').textContent = username;
            document.getElementById('authPage').style.display = 'none';
            document.getElementById('trackerPage').style.display = 'block';
            initializeTracker();
        }

        function logout() {
            currentUser = null;
            document.getElementById('trackerPage').style.display = 'none';
            document.getElementById('authPage').style.display = 'flex';
            document.querySelector('.tab-btn').click();
        }

        // TRACKER FUNCTIONS
        function getUserPrefix() { return `gymbeast_${currentUser}_`; }
        function getTodayKey() { const d = new Date(); d.setHours(0,0,0,0); return getUserPrefix() + d.toDateString(); }

        function seedInitialStreak() {
            const dates = ['2026-01-05','2026-01-06','2026-01-07','2026-01-08','2026-01-09','2026-01-10'];
            dates.forEach(dateStr => localStorage.setItem(getUserPrefix() + dateStr + '_complete', 'true'));
        }

        function calculateStreak() {
            let streak = 0, date = new Date(getTodayKey().replace(getUserPrefix(), ''));
            while (localStorage.getItem(getUserPrefix() + date.toDateString() + '_complete')) {
                streak++; date.setDate(date.getDate() - 1);
                if (streak > 365) break;
            }
            return streak;
        }

        function initializeTracker() {
            seedInitialStreak();
            updateDisplay();
            loadCalendar();
            loadTasks();
        }

        function toggleTask(taskId) {
            const cb = document.getElementById(taskId);
            cb.checked = !cb.checked;
            cb.closest('.task-item').classList.toggle('completed', cb.checked);
            updateSaveButton();
        }

        function updateSaveButton() {
            const allComplete = TASKS.every(t => document.getElementById(t).checked);
            const todayComplete = localStorage.getItem(getTodayKey() + '_complete');
            const btn = document.getElementById('save-btn');
            
            btn.disabled = !!todayComplete;
            btn.textContent = todayComplete ? '‚úÖ SAVED!' : `‚ö° SAVE ‚Üí STREAK ${calculateStreak() + 1}üî•`;
            if (!allComplete && !todayComplete) btn.disabled = true;
        }

        function saveDay() {
            const todayKey = getTodayKey();
            TASKS.forEach(task => localStorage.setItem(todayKey, JSON.stringify({[task]: true})));
            localStorage.setItem(todayKey + '_complete', 'true');
            
            const streak = calculateStreak();
            document.body.classList.add('streak-celebration');
            document.getElementById('status').innerHTML = `üí• BEAST MODE! ${streak} DAYS üî•`;
            document.getElementById('status').className = 'status success';
            document.getElementById('streak-display').textContent = `STREAK: ${streak} DAYS`;
            document.getElementById('save-btn').textContent = `‚úÖ ${streak} DAY BEAST!`;
            document.getElementById('save-btn').disabled = true;
            setTimeout(() => document.body.classList.remove('streak-celebration'), 4000);
        }

        function updateDisplay() {
            const streak = calculateStreak();
            document.getElementById('streak-count').textContent = streak;
            document.getElementById('next-streak').textContent = streak + 1;
            document.getElementById('challenge-day').textContent = 7;
        }

        function loadTasks() {
            const todayKey = getTodayKey();
            const saved = JSON.parse(localStorage.getItem(todayKey) || '{}');
            TASKS.forEach(task => {
                const cb = document.getElementById(task);
                cb.checked = !!saved[task];
                cb.closest('.task-item').classList.toggle('completed', cb.checked);
            });
            updateSaveButton();
        }

        function loadCalendar() {
            const cal = document.getElementById('calendar');
            cal.innerHTML = '';
            weekdays.forEach(day => {
                const div = document.createElement('div');
                div.className = 'weekday';
                div.textContent = day;
                cal.appendChild(div);
            });
            
            const firstDay = new Date(currentYear, currentMonth, 1).getDay();
            const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();
            
            for (let i = 0; i < firstDay; i++) {
                cal.innerHTML += '<div></div>';
            }
            
            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(currentYear, currentMonth, day);
                const dateKey = getUserPrefix() + date.toDateString();
                const div = document.createElement('div');
                div.className = 'day';
                div.textContent = day;
                
                if (localStorage.getItem(dateKey + '_complete')) {
                    const streak = calculateStreakForDate(date.toDateString());
                    div.classList.add(`streak-${Math.min(streak, 6)}`);
                } else if (date.toDateString() === new Date(getTodayKey().replace(getUserPrefix(), '')).toDateString()) {
                    div.classList.add('today');
                } else if (date < new Date()) {
                    div.classList.add('missed');
                } else {
                    div.classList.add('future');
                }
                
                if (date.toDateString() === START_DATE.toDateString()) div.classList.add('start-day');
                div.title = date.toDateString();
                cal.appendChild(div);
            }
            document.getElementById('month-title').textContent = `${monthNames[currentMonth].toUpperCase()} ${currentYear}`;
        }

        function calculateStreakForDate(dateStr) {
            let streak = 0, date = new Date(dateStr);
            while (localStorage.getItem(getUserPrefix() + date.toDateString() + '_complete')) {
                streak++; date.setDate(date.getDate() - 1);
                if (streak > 365) break;
            }
            return streak;
        }

        function prevMonth() { currentMonth--; if (currentMonth < 0) { currentMonth = 11; currentYear--; } loadCalendar(); }
        function nextMonth() { currentMonth++; if (currentMonth > 11) { currentMonth = 0; currentYear++; } loadCalendar(); }

        document.addEventListener('keypress', e => {
            if (e.key === 'Enter') {
                if (document.getElementById('loginForm').classList.contains('active')) handleLogin();
                else handleSignup();
            }
        });

        TASKS.forEach(task => document.getElementById(task)?.addEventListener('change', updateSaveButton));
    </script>
</body>
</html>
