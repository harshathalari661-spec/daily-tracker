        .day { aspect-ratio: 1; border-radius: 12px; display: flex; align-items: center; justify-content: center; font-weight: 800; font-size: 16px; cursor: pointer; transition: all 0.3s; border: 3px solid #555; background: #1a1a1a; }
        .day:hover { transform: scale(1.1); border-color: #ff4500; box-shadow: 0 8px 25px rgba(255,69,0,0.5); }
        .streak-1 { background: linear-gradient(135deg, #666, #888); color: #fff; border-color: #aaa; }
        .streak-2 { background: linear-gradient(135deg, #32cd32, #228b22); color: #fff; border-color: #32cd32; }
        .streak-3 { background: linear-gradient(135deg, #ffd700, #ff8c00); color: #000; border-color: #ffd700; }
        .streak-4 { background: linear-gradient(135deg, #ff4500, #ff8c00); color: #fff; border-color: #ff4500; }
        .streak-5, .streak-6 { background: linear-gradient(135deg, #ff1493, #ff69b4); color: #fff; border-color: #ff1493; animation: gymPulse 1s infinite; box-shadow: 0 0 20px rgba(255,20,147,0.8); }
        @keyframes gymPulse { 0%, 100% { box-shadow: 0 0 10px rgba(255,20,147,0.6); transform: scale(1); } 50% { box-shadow: 0 0 25px rgba(255,20,147,1); transform: scale(1.05); } }
        .today { border-color: #ffd700 !important; background: linear-gradient(135deg, #ffd700, #ff8c00) !important; color: #000; transform: scale(1.05); }
        .future { color: #666; background: #111; }
        .missed { background: linear-gradient(135deg, #8b0000, #b22222); border-color: #dc143c; }
        .start-day { border-color: #32cd32; background: linear-gradient(135deg, #32cd32, #228b22) !important; }
        .tasks-section { background: linear-gradient(135deg, #1a1a1a, #333); color: #fff; padding: 25px; border-radius: 20px; border: 3px solid #666; box-shadow: 0 15px 40px rgba(0,0,0,0.6); margin-top: 20px; }
        .tasks { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-top: 20px; }
        .task-item { background: linear-gradient(145deg, #2a2a2a, #1f1f1f); padding: 18px; border-radius: 15px; border: 2px solid #555; transition: all 0.3s; cursor: pointer; box-shadow: 0 8px 20px rgba(0,0,0,0.4); }
        .task-item:hover { border-color: #ff4500; transform: translateY(-3px); }
        .task-item.completed { background: linear-gradient(135deg, #32cd32, #228b22) !important; border-color: #32cd32 !important; transform: scale(1.02); box-shadow: 0 10px 30px rgba(50,205,50,0.6); }
        .task-item input[type="checkbox"] { transform: scale(1.8); margin-right: 12px; accent-color: #ff4500; }
        .save-btn { width: 100%; background: linear-gradient(45deg, #ff4500, #ff8c00); color: #fff; border: 3px solid #ffd700; padding: 20px; border-radius: 20px; font-size: 1.4em; font-weight: 900; cursor: pointer; text-transform: uppercase; margin-top: 25px; transition: all 0.4s; }
        .save-btn:hover:not(:disabled) { background: linear-gradient(45deg, #ffd700, #ff4500); transform: translateY(-5px); box-shadow: 0 20px 40px rgba(255,69,0,0.6); }
        .save-btn:disabled { opacity: 0.7; cursor: not-allowed; background: #666; }
        .status { text-align: center; font-size: 1.3em; margin-top: 20px; font-weight: 800; text-transform: uppercase; }
        .status.success { color: #32cd32; text-shadow: 0 0 20px currentColor; }
        @media (max-width: 768px) { .container { margin: 20px auto; padding: 20px; } .streak-display { font-size: 2.5em; } .tasks { grid-template-columns: 1fr; } }
